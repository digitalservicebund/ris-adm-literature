{
  "name": "ris-adm-vwv-frontend",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "25.2.1"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e:preparation": "playwright test -- e2e/seed-data.ts",
    "test:e2e": "playwright test",
    "test:e2e:debug": "PWDEBUG=1 playwright test --ui",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/ e2e/",
    "format:check": "prettier --check src/ e2e/",
    "audit:licences": "license-checker-rseidelsohn --production --excludePrivatePackages --onlyAllow \"$(. ./joinAllowedLicenses.sh)\" --csv --out ./frontend-licence-report.csv",
    "preinstall": "echo 'Please disable script execution: npm config set ignore-scripts true' && exit 1"
  },
  "dependencies": {
    "@braintree/sanitize-url": "^7.1.1",
    "@digitalservicebund/ris-ui": "^3.19.1",
    "@guardian/prosemirror-invisibles": "^3.1.1",
    "@iconify-json/ic": "^1.2.4",
    "@iconify-json/material-symbols": "^1.2.50",
    "@iconify-json/mdi": "^1.2.2",
    "@sentry/vite-plugin": "^4.6.1",
    "@sentry/vue": "^10.30.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tiptap/extension-blockquote": "^3.11.0",
    "@tiptap/extension-document": "^3.12.1",
    "@tiptap/extension-image": "^3.13.0",
    "@tiptap/extension-list": "^3.11.0",
    "@tiptap/extension-paragraph": "^3.12.1",
    "@tiptap/extension-subscript": "^3.13.0",
    "@tiptap/extension-superscript": "^3.13.0",
    "@tiptap/extension-text-align": "^3.13.0",
    "@tiptap/extension-text-style": "^3.13.0",
    "@tiptap/pm": "^3.6.7",
    "@tiptap/starter-kit": "^3.13.0",
    "@tiptap/vue-3": "^3.13.0",
    "@tsconfig/node23": "^23.0.4",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.2",
    "@vue/tsconfig": "^0.8.1",
    "@vueuse/core": "^14.1.0",
    "dayjs": "^1.11.19",
    "keycloak-js": "^26.2.2",
    "postcss": "^8.5.6",
    "primevue": "^4.5.3",
    "unplugin-icons": "^22.5.0",
    "vite": "^7.2.7",
    "vue-router": "^4.6.4",
    "vue-tsc": "^3.1.8"
  },
  "devDependencies": {
    "@pinia/testing": "^1.0.3",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/user-event": "^14.6.1",
    "@testing-library/vue": "^8.1.0",
    "@tsconfig/node24": "^24.0.3",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.10.4",
    "@vitest/coverage-istanbul": "^4.0.16",
    "@vitest/eslint-plugin": "1.5.4",
    "@vitest/ui": "^4.0.5",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.2",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-testing-library": "^7.13.6",
    "eslint-plugin-vue": "^10.6.2",
    "jsdom": "^26.1.0",
    "license-checker-rseidelsohn": "^4.4.2",
    "pinia": "^3.0.4",
    "prettier": "^3.7.4",
    "resize-observer-polyfill": "^1.5.1",
    "tailwindcss": "~4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.5",
    "vue-eslint-parser": "^10.2.0"
  },
  "overrides": {
    "vite": {
      "esbuild": "0.25.0"
    }
  }
}
